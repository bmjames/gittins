-- Initial gittins.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                gittins
version:             0.1.0.0
synopsis:            Tool for managing multiple git repositories
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Ben James
maintainer:          bmjames@gmail.com
-- copyright:           
category:            Development
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Gittins.Config
                     , Gittins.FilePath
                     , Gittins.Interpreter
                     , Gittins.Main
                     , Gittins.Pretty
                     , Gittins.Process
                     , Gittins.Types
  build-depends:       base >=4.7 && <4.8
                     , abstract-par
                     , ansi-wl-pprint ==0.6.*
                     , async
                     , directory ==1.2.*
                     , filepath ==1.3.*
                     , free >=4.10 && <5
                     , ini ==0.3.*
                     , mtl ==2.1.*
                     , optparse-applicative ==0.11.*
                     , process ==1.2.*
                     , SafeSemaphore
                     , text ==1.2.*
                     , transformers
                     , transformers-base
                     , unordered-containers ==0.2.*
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -O2 -Wall -threaded

executable gittins
  main-is:             Main.hs
  hs-source-dirs:      gittins
  build-depends:       gittins
                     , base
  default-language:    Haskell2010
  ghc-options:         -O2 -Wall -threaded

test-suite tests
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  hs-source-dirs:      tests
  build-depends:       base
                     , gittins
                     , free
                     , hspec
  default-language:    Haskell2010
  ghc-options:         -O2 -Wall -threaded
